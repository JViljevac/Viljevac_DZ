<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnMass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/ic_mass"
        android:background="@color/colorOrange"/>
    <Button
        android:id="@+id/btnTemp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/btnMass"
        android:drawableTop="@drawable/ic_temp"
        android:background="@color/colorBlue"/>
    <Button
        android:id="@+id/btnLength"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/btnTemp"
        android:drawableTop="@drawable/ic_length"
        android:background="@color/colorPink"/>
    <Button
        android:id="@+id/btnSpeed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/btnLength"
        android:drawableTop="@drawable/ic_speed"
        android:background="@color/colorYellow"
        />

</RelativeLayout>